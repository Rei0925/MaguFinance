<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss} %level]: [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- デフォルト設定（全体適用） -->
    <root level="info">
        <appender-ref ref="stdout" />
    </root>

</configuration>